    <!-- Account Move (Invoice) Views -->

    <!-- Invoice Search View -->
    <record id="view_account_invoice_filter_inherit_branch" model="ir.ui.view">
        <field name="name">account.move.search.inherit.branch</field>
        <field name="model">account.move</field>
