<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="ths_vet_base.CompletionDialog">
        <Dialog size="'md'" title="props.title || 'Order Successfully Processed'">
            <div class="text-center p-4">
                <i class="fa fa-check-circle fa-4x text-success mb-3"/>
                <h4 class="mb-3">Order Successfully Processed!</h4>
                <p class="mb-4" t-esc="props.message"/>

                <div class="d-flex gap-3 justify-content-center">
                    <button class="btn btn-primary btn-lg" t-on-click="onPrintInvoice">
                        <i class="fa fa-print me-2"/>
                        Print Invoice
                    </button>
                    <button class="btn btn-success btn-lg" t-on-click="onNewOrder">
                        <i class="fa fa-plus me-2"/>
                        New Order
                    </button>
                    <button class="btn btn-secondary btn-lg" t-on-click="onCloseOnly">
                        <i class="fa fa-times me-2"/>
                        Close
                    </button>
                </div>
            </div>
        </Dialog>
    </t>
</templates>