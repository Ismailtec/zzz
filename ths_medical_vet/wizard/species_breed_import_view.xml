<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_species_breed_import_wizard" model="ir.ui.view">
        <field name="name">vet.species.breed.import.wizard.form</field>
        <field name="model">vet.species.breed.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Species/Breeds">
                <group invisible="import_summary">
                    <group>
                        <field name="import_type" widget="radio"/>
                        <field name="file" filename="filename" widget="binary"/>
                        <field name="filename" invisible="1"/>
                        <field name="delimiter"/>
                    </group>
                    <group>
                        <button name="action_download_template"
                                string="Download Template"
                                type="object"
                                class="btn-link"/>
                        <field name="sample_data" nolabel="1"/>
                    </group>
                </group>
                <group invisible="not import_summary">
                    <field name="import_summary" nolabel="1" readonly="1"/>
                </group>
                <footer>
                    <button name="action_import"
                            string="Import"
                            type="object"
                            class="btn-primary"
                            invisible="import_summary"/>
                    <button string="Close"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_species_breed_import_wizard" model="ir.actions.act_window">
        <field name="name">Import Species/Breeds</field>
        <field name="res_model">vet.species.breed.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_species_breed_import"
              name="Import Species/Breeds"
              parent="ths_medical_base.menu_ths_medical_config"
              action="action_species_breed_import_wizard"
              sequence="50"/>
</odoo>