        <record id="view_move_line_form_inherit_ths_base" model="ir.ui.view">
            <field name="name">account.move.line.form.inherit.ths.base</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <field name="ths_hide_taxes" invisible="1"/>
                </xpath>
                <xpath expr="//group[@invisible='not tax_line_id and not tax_ids']" position="attributes">
                    <attribute name="invisible">parent.ths_hide_taxes == True or (not tax_line_id and not tax_ids)</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_move_line_list_inherit_ths_base" model="ir.ui.view">
            <field name="name">account.move.line.list.inherit.ths.base</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field name="arch" type="xml">
                <list name="move_line_tree" position="inside">
                    <field name="ths_hide_taxes" column_invisible="1"/>
                </list>
                <field name="tax_ids" position="attributes">
                    <attribute name="column_invisible">ths_hide_taxes == True</attribute>
                    <attribute name="optional">hide</attribute>
                </field>
                <field name="tax_tag_ids" position="attributes">
                    <attribute name="column_invisible">ths_hide_taxes == True</attribute>
                    <attribute name="optional">hide</attribute>
                </field>
                <field name="tax_line_id" position="attributes">
                    <attribute name="column_invisible">ths_hide_taxes == True</attribute>
                    <attribute name="optional">hide</attribute>
                </field>

            </field>
        </record>

        <record id="view_move_search_inherit_ths_base" model="ir.ui.view">
            <field name="name">account.move.search.inherit.ths.base</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="payment_journal_ids"/>
                </field>
                <filter name="draft" position="before">
                    <filter string="Cashier Payment Journals" name="payment_journal_ids" domain="[('payment_journal_ids.end_user_payment_method','=', True)]"/>
                </filter>
                <xpath expr="//filter[@name='groupy_by_journal']" position="inside">
                    <filter string="Payment Journals" name="group_payment_journals" context="{'group_by': 'payment_journal_ids'}"/>
                </xpath>
                <xpath expr="//filter" position="after">
                    <searchpanel>
                        <field name="company_id" select="multi" icon="fa-building"/>
                        <field name="state" select="multi" icon="fa-filter" enable_counters="1"/>
                        <field name="payment_journal_ids" string="Journals" icon="fa fa-credit-card" select="multi" enable_counters="1"/>
                        <field name="payment_state" select="multi" icon="fa-credit-card" enable_counters="1" string="Payment Status"/>
                        <field name="partner_id" select="multi" icon="fa-user-plus" enable_counters="1" expand="False" string="Pet Owner" domain="[('partner_type_id', '=', 'Pet Owner')]"/>

                    </searchpanel>
                </xpath>

            </field>
        </record>

        <record id="view_account_journal_form_inherit_ths_base" model="ir.ui.view">
            <field name="name">account.journal.form.inherit.ths.base</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <field name="ths_hide_taxes" invisible="1"/>
                </xpath>
                <field name="code" position="after">
                    <field name="end_user_payment_method" invisible="type not in ['bank', 'cash']"/>
                </field>
            </field>
        </record>

    </data>
</odoo>
