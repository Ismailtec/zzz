<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_order_form_inherit_ths_base" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.ths.base</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after"><field name="ths_hide_taxes" invisible="1"/></field>
                <field name="partner_id" position="attributes">
                    <attribute name="domain">[('partner_type_id', '=?', partner_type_id)]</attribute>
                    <attribute name="context">{'show_address': False, 'show_email': False}</attribute>
                    <attribute name="readonly">state == 'sale'</attribute>
                    <attribute name="options">{'no_open': True, 'no_create': True}</attribute>
                </field>
                <xpath expr="//field[@name='partner_id']" position="before">
                    <field name="partner_type_id" options="{'no_open': True, 'no_create': True}" readonly="state == 'sale'"
                           placeholder="Select Partner Type first to see partners..."/>
                </xpath>
                <xpath expr="//page[@name='order_lines']//field[@name='order_line']//list//field[@name='product_template_id']" position="attributes">
                    <attribute name="options">{'no_quick_create': True, 'no_create_edit': True}</attribute>
                </xpath>
                <xpath expr="//page[@name='order_lines']//field[@name='order_line']//list//field[@name='tax_id']" position="attributes">
                    <attribute name="column_invisible">parent.ths_hide_taxes == True</attribute>
                </xpath>
                <xpath expr="//page[@name='order_lines']//field[@name='order_line']//form//field[@name='tax_id']" position="attributes">
                    <attribute name="column_invisible">parent.ths_hide_taxes == True</attribute>
                </xpath>
                <xpath expr="//page[@name='order_lines']//field[@name='order_line']//list//field[@name='discount']" position="attributes">
                    <attribute name="optional">show</attribute>
                </xpath>
                <xpath expr="//page[@name='order_lines']//field[@name='order_line']//form//field[@name='discount']" position="attributes">
                    <attribute name="optional">show</attribute>
                </xpath>
                <xpath expr="//page[@name='order_lines']//field[@name='order_line']//list//field[@name='price_total']" position="attributes">
                    <attribute name="invisible">0</attribute>
                </xpath>
                <xpath expr="//page[@name='order_lines']//field[@name='order_line']//form//group//field[@name='price_total']" position="attributes">
                    <attribute name="invisible">0</attribute>
                </xpath>
                <xpath expr="//page[@name='order_lines']//field[@name='order_line']//list//field[@name='product_packaging_id']" position="attributes">
                    <attribute name="optional">hide</attribute>
                </xpath>
                <xpath expr="//page[@name='order_lines']//field[@name='order_line']//form//field[@name='product_packaging_id']" position="attributes">
                    <attribute name="optional">hide</attribute>
                </xpath>
                <xpath expr="//page[@name='order_lines']//field[@name='order_line']//list//field[@name='product_packaging_qty']" position="attributes">
                    <attribute name="optional">hide</attribute>
                </xpath>
                <xpath expr="//page[@name='order_lines']//field[@name='order_line']//form//field[@name='product_packaging_qty']" position="attributes">
                    <attribute name="optional">hide</attribute>
                </xpath>
                <xpath expr="//field[@name='tax_totals']" position="before">
                    <!-- Wrapper to control vertical spacing between custom discount fields independently, using smaller gap for closeness -->
                    <div class="d-flex flex-column gap-1" invisible="total_discount_amount == 0">
                        <div class="row mb-0">
                            <div class="col-6 text-end fw-bold">
                                <label for="total_before_discount" string="Total W/o Disc." class="fw-bold"/>
                            </div>
                            <div class="col-6 fw-bold">
                                <field name="total_before_discount" nolabel="1" widget="monetary" readonly="1" class="text-nowrap fw-bolder"/>
                            </div>
                        </div>
                        <div class="row mb-0">
                            <div class="col-6 text-end fw-bold">
                                <label for="total_discount_amount" string="Total Disc." class="fw-bold"/>
                            </div>
                            <div class="col-6 fw-bold">
                                <field name="total_discount_amount" nolabel="1" widget="monetary" readonly="1" class="text-danger text-nowrap fw-bolder"/>
                            </div>
                        </div>
                    </div>
                </xpath>
<!--                <field name="tax_totals" position="before">-->
<!--                    <field name="total_before_discount" string="Total W/o Disc." widget="monetary" readonly="1" invisible="total_discount_amount == 0"/>-->
<!--                    <field name="total_discount_amount" widget="monetary" string="Total Disc." readonly="1" class="text-danger" invisible="total_discount_amount == 0"/>-->
<!--                </field>-->
            </field>
        </record>
    </data>
</odoo>
